@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Index";
}

<div class="bg-primary text-white p-1 m-1">
    <h2>User List</h2>
</div>

<table class="table table-bordered table-striped m-1 p-1">
    <tr>
        <th>User ID</th>
        <th>User Name</th>
        <th>Email</th>
        <th>Action</th>
    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td class="text-center" colspan="3">
                No Users
            </td>
        </tr>
    }
    else
    {
        foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <form asp-action="Delete" method="post" asp-route-id="@user.Id">
                        <button type="submit" value="Delete" class="btn btn-danger btn-sm">Delete</button>
                        <a asp-action="Update" asp-route-id="@user.Id" class="btn btn-primary btn-sm">Update</a>
                    </form>
                </td>
            </tr>
        }
    }

</table>
<a asp-action="Create" class="btn btn-primary">Create</a>