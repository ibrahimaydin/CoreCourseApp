@model Course
@{
    ViewData["Title"] = ViewBag.ActionMode;
}

<div class="m-4">
    <div class="bg-success text-white p-4">Course @ViewBag.ActionMode</div>
    <form asp-action="@ViewBag.ActionMode" method="post">
        <input type="hidden" name="original.Id" value="@Model.Id" />
        <input type="hidden" name="original.Name" value="@Model.Name" />
        <input type="hidden" name="original.Price" value="@Model.Price" />
        <input type="hidden" name="original.isActive" value="@Model.isActive.ToString()" />

    


        <input type="hidden" name="original.Instructor.Id" value="@Model.Instructor?.Id" />
        <input type="hidden" name="original.Instructor.Name" value="@Model.Instructor?.Name" />

        <div class="row">
            <div class="col-6">

                <div class="bg-primary text-white p-2 mt-3">
                          Course
                </div>

                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Price"></label>
                    <input asp-for="Price" class="form-control" />
                </div>
                <div class="form-group">
                    <input asp-for="isActive" class="custom-control-input" />
                    <label asp-for="isActive" class="custom-control-label"></label>

                </div>
            </div>
            <div class="col-6">
                <div class="bg-primary text-white p-2 mt-3">
                    Instructor
                </div>
                <input type="hidden" name="Instructor.Id" />
                <div class="form-group">
                    <label asp-for="Instructor.Name"></label>
                    <input asp-for="Instructor.Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Instructor.Contact.Email"></label>
                    <input asp-for="Instructor.Contact.Email" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Instructor.Contact.Phone"></label>
                    <input asp-for="Instructor.Contact.Phone" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Instructor.Contact.Address.City"></label>
                    <input asp-for="Instructor.Contact.Address.City" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Instructor.Contact.Address.Country"></label>
                    <input asp-for="Instructor.Contact.Address.Country" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Instructor.Contact.Address.Text"></label>
                    <input asp-for="Instructor.Contact.Address.Text" class="form-control" />
                </div>

            </div>
        </div>


      
        <button type="submit" class="btn btn-primary">Submit</button>

    </form>
</div>

